.menu {
  width: 32%;
  margin-bottom: 1.5em;
  display: inline-block;
  position: relative;
  
  a {
    display: block;
    color: #222;
  }
  a:hover {
    color: $color--blue;
    text-decoration: none;
  }
  .active {
    color: $color--blue;
  }
  li {
    list-style: none;
    
    &:hover {
      
      > .menu__submenu {
        display: block;
      }

    }
    
  }
  > li {
    position: relative;
    border-top: 1px solid $color--grey;
    padding: .35em 0;
    clearfix()
  }
  
  > li > a {
    font-weight: 600;
    float: left;
  }
  
  > li > a.action {
    float: right;
  }
  
  &__submenu {
    position: absolute;
    z-index: 1;
    top: 2em;
    display: none;
    width: 100%;
    
    &:hover {
      display: block;
    }
    
    li {
      border-bottom: 1px solid #444; 
    }
    a {
      padding: 0.5em 0.75em;
      font-size: .9em;
      font-weight: $font-weight--bold;
      color: #fff;
      background: $color--black;
      white-space: nowrap;
    }
    a:hover {
      background: #333;
      color: #fff;
    }

  }

}