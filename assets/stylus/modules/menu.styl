.menu {
  width: 100%;
  display: inline-block;
  position: relative;
  margin-top: 2em;
  z-index: 100;
  text-align: left;
  
  a {
    position: relative
    display: block;
    color: #222;
    text-align: center;
    padding: 0.25em 2em;
    font-size: 1em;
  }
  
  .action {
    padding: 0.25em 0.75em;
  }
  
  a:hover {
    color: $color--blue;
    text-decoration: none;
  }
  
  .active {
    color: $color--blue;
    background-color: $color--white;
    border-top-left-radius: 0.125rem;
    border-top-right-radius: 0.125rem;
    border-bottom: none;
    
    &:after {
      position: absolute;
      bottom: -8px;
      width: 100%;
      height 10px;
      background-color: white;
      border-right: 2px solid white;
    }

  }
  
  li {
    display: inline-block;
    list-style: none;
    border-bottom: none;
    
    &:last-child {
      float: right;
      transform: translateY(1px)
      a {
        padding: 0.25em 0.75em;
        text-transform: none;
      }
    }
    
  }
  > li {
    position: relative;
    padding: .35em 0;
    clearfix()
  }
  
  > li > a {
    text-transform: uppercase;
    font-weight: 600;
  }
  
  > li > a.action {
    
  }

}