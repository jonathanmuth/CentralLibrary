.cover {
  position: relative;
  width: 100%;
  transition: all .2s ease-in-out;
  text-align: center;
  border-left: 0.33em solid $color--black;
  border-top-right-radius: 0.25em;
  border-bottom-right-radius: 0.25em;
  
  &:before {
    content: "";
    display: block;
    padding-top: 137.5%;  /* initial ratio of 1:1*/
  }
  
  &:hover {
    transform: translateY(-0.5em);
    box-shadow: 0px 12px 18px rgba(0, 0, 0, 0.2);
    transition: all .2s ease-in-out;
  }
  
  &__wrapper {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.75em;
    text-align: left;
    color: white  ;
  }
  
  &__title {
    font-size: 160%;
    line-height: 1.1;
    font-weight: $font-weight--bold;
    margin-bottom: 0.33em;
  }
  
  &__author {
    font-size: 110%;
  }
  
  &__link {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
  }

  &--yellow {
    background-color: $color--yellow;
    border-color: darken($color--yellow, 20%)
    
    .cover__title {
      font-family: $font-stack--serif;
      color: $color--black;
    }
    
    .cover__author {
      font-size: 110%;
      font-family: $font-stack--sans;
      color: $color--black;
    }

  }
  
  &--blue {
    background-color: $color--blue;
    border-color: darken($color--blue, 20%)
    
    .cover__title {
      font-family: $font-stack--sans;
      font-weight: $font-weight--black;
    }
    .cover__author {
      font-family: $font-stack--serif;
    }
  }
  
  &--black {
    background-color: $color--black;
    border-color: lighten($color--black, 20%);
    
    .cover__title {
      font-family: $font-stack--sans;
      font-weight: $font-weight--black;
    }
    .cover__author {
      font-family: $font-stack--serif;
    }
  }
  
  &--grey {
    background-color: $color--grey;
    border-color: darken($color--grey, 20%)
    
    .cover__title {
      font-family: $font-stack--sans;
      font-weight: $font-weight--black;
      color: $color--black;
    }
    .cover__author {
      font-family: $font-stack--serif;
      color: $color--black;
    }
  }

}