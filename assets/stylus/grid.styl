.grid {

	> * {
		vertical-align: top;
	}

	.one-third {
		display: inline-block;
		width: 32%;
		margin-right: 2%;
		
		&:last-child {
			margin-right: 0;
		}
	}

	.two-thirds {
		display: inline-block;
		width: 64%;
		margin-right: 2%;
		
		&:last-child {
			margin-right: 0;
		}
	}
	
	.one-half {
		display: inline-block;
		width: 49%;
		margin-right: 2%;
		
		&:last-child {
			margin-right: 0;
		}
	}

	.one-whole {
		display: inline-block;
		width: 100%;
	}

}